﻿@{
    ViewData["Title"] = "Estadísticas de Productos";
}<style>
     body {
         background: linear-gradient(to bottom right, #d4f4dd, #e8fff1);
         font-family: 'Segoe UI', sans-serif;
         color: #2c3e50;
         min-height: 100vh;
         padding: 20px;
     }

     h2 {
         text-align: center;
         margin-top: 20px;
         font-weight: 700;
         font-size: 2rem;
         color: #247a4d;
         text-shadow: 0 1px 2px rgba(0,0,0,0.1);
     }

     .card {
         background: #ffffff;
         border-radius: 16px;
         box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
         border-left: 5px solid #34c38f;
         transition: transform 0.3s ease;
     }

         .card:hover {
             transform: scale(1.01);
         }

     .card-header {
         background-color: #34c38f;
         color: #fff;
         padding: 15px;
         font-size: 1.1rem;
         font-weight: 600;
         border-radius: 16px 16px 0 0;
         text-align: center;
     }

         .card-header.warning {
             background-color: #f39c12;
         }

     .table th {
         background-color: #eafaf1;
         color: #247a4d;
         font-weight: bold;
         text-align: center;
     }

     .table td {
         background-color: #ffffff;
         text-align: center;
     }

     .table tbody tr:hover {
         background-color: #f0fff5;
     }

     .btn-return {
         display: block;
         margin: 30px auto 0;
         padding: 8px 20px;
         font-size: 0.95rem;
         border-radius: 10px;
         background-color: #34c38f;
         color: #ffffff;
         border: none;
         text-decoration: none;
         transition: background-color 0.3s ease;
         text-align: center;
         width: 100px;
     }

         .btn-return:hover {
             background-color: #2eaa7b;
         }

     .text-center {
         text-align: center;
     }
</style>

<div class="container">
    <h2>Estadísticas de Ventas</h2>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4>Productos Más Vendidos</h4>
                </div>
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Producto</th>
                                <th>Ventas</th>
                                <th>Stock</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var producto in ViewBag.MasVendidos)
                            {
                                <tr>
                                    <td>@producto.Nombre</td>
                                    <td>@producto.Ventas</td>
                                    <td>@producto.Cantidad</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-warning text-white">
                    <h4>Productos Menos Vendidos</h4>
                </div>
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Producto</th>
                                <th>Ventas</th>
                                <th>Stock</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var producto in ViewBag.MenosVendidos)
                            {
                                <tr>
                                    <td>@producto.Nombre</td>
                                    <td>@producto.Ventas</td>
                                    <td>@producto.Cantidad</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <a href="@Url.Action("Inicio", "Cuenta")" class="btn btn-secondary mt-3">
        Volver al Inicio
    </a>
</div>