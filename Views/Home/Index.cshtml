@model IEnumerable<Producto>

<h1>Productos</h1>

<a asp-action="Create" class="btn btn-success">+ Agregar Producto</a>

<table class="table mt-3">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Cantidad</th>
            <th>Descripcion</th>
            <th>Editar</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nombre</td>
                    <td>@item.Precio.ToString("C")</td>
                    <td>@(item.Categoria?.Nombre ?? "Sin categoría")</td>
                    <td>@(item.Proveedor?.Nombre ?? "Sin proveedor")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                </tr>
            }
        }
        @if (Model.Any())
        {
            <table class="table">
                <!-- Tabla aquí -->
            </table>
        }
        else
        {
            <p>No hay productos registrados.</p> <!-- Esto explica tu mensaje -->
        }
    </tbody>
</table>
