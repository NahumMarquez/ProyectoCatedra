@model List<ProyectoCatedra.Models.Producto>
<h2>Informe de Inventario</h2>
<!-- Tabla con la información del inventario -->
<table class="table table-bordered">
	<thead>
		<tr>
			<th>ID</th>
			<th>Nombre</th>
			<th>Cantidad</th>
			<th>Precio</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var producto in Model)
		{
			<tr>
				<td>@producto.Id</td>
				<td>@producto.Nombre</td>
				<td>@producto.Cantidad</td>
				<td>@producto.Precio</td>
			</tr>
		}
	</tbody>
</table>
<!-- Botones para exportar a PDF y Excel -->
<a asp-controller="Inventario" asp-action="ExportarPDF" class="btn btn-danger">
	Exportar a
	PDF
</a>

<!-- Botón para volver a la página principal del inventario -->
<a asp-controller="Cuenta" asp-action="Inicio" class="btn btn-secondary">Volver</a>