@model List<ProyectoCatedra.Models.Producto>
@using ProyectoCatedra.Models
@{
    var clientes = ViewBag.Clientes as List<Cliente> ?? new List<Cliente>();
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-controller="Cuenta" asp-action="Inicio">Inicio</a>
        </li>
        <li class="breadcrumb-item">Index</li>
    </ol>
</nav>
<h2>Inventario</h2>

@if (ViewBag.ProductosBajoStock.Count > 0)
{
    <div class="alert alert-warning">
        <i class="fa-solid fa-triangle-exclamation"></i>
        ¡Atención! Algunos productos están por agotarse:
        <ul>
            @foreach (var producto in ViewBag.ProductosBajoStock)
            {
                <li>@producto.Nombre - Stock actual: @producto.Cantidad (mínimo: @producto.StockMinimo)</li>
            }
        </ul>
    </div>
}

<div class="d-flex justify-content-between mb-3">
    <a class="btn btn-success" href="@Url.Action("Agregar", "Inventario")">Agregar Producto</a>
    <a asp-controller="Inventario" asp-action="ListaClientes" class="btn btn-info">Resgistrar clientes y datos de clientes</a>
</div>

<div class="col-xl-12 col-md-12 col-sm-12 mt-3">
    <table class="table table-striped table-bordered table-hover shadow-sm">
        <thead thead-dark>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Cantidad</th>
                <th>Precio</th>
                <th>Stock Mínimo</th>
                <th>Accion</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (Producto producto in Model)
                {
                    <tr>
                        <td>@producto.Id</td>
                        <td>@producto.Nombre</td>
                        <td>@producto.Cantidad</td>
                        <td>@producto.Precio</td>
                        <td>@producto.StockMinimo</td>
                        <td>
                            <div class="d-flex gap-2">
                                <a type="button" class="btn btn-warning btn-sm rounded-circle d-flex align-items-center justify-content-center"
                                   style="width: 40px; height: 40px;" asp-action="Actualizar" asp-controller="Inventario" asp-route-id="@producto.Id" title="Actualizar">
                                    <i class="fa-solid fa-pencil"></i>
                                </a>
                                <a type="button" class="btn btn-danger btn-sm rounded-circle d-flex align-items-center justify-content-center"
                                   style="width: 40px; height: 40px;" asp-action="Eliminar" asp-controller="Inventario" asp-route-id="@producto.Id" title="Eliminar" onclick="return confirm('¿Estás seguro de que deseas eliminar este producto?');">
                                    <i class="fa-solid fa-trash"></i>
                                </a>
                                <a type="button" class="btn btn-info btn-sm rounded-circle d-flex align-items-center justify-content-center"
                                   style="width: 40px; height: 40px;" asp-action="Producto" asp-controller="Historial"
                                   asp-route-id="@producto.Id" title="Ver Historial">
                                    <i class="fa-solid fa-clock-rotate-left"></i>
                                </a>
                                <button type="button" class="btn btn-success btn-sm rounded-circle d-flex align-items-center justify-content-center btn-vender"
                                        style="width: 40px; height: 40px;" data-id="@producto.Id" title="Vender">
                                    <i class="fa-solid fa-cash-register"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<!--vender producto -->
<div class="modal fade" id="venderModal" tabindex="-1" aria-labelledby="venderModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="venderModalLabel">Vender Producto</h5>
            </div>
            <div class="modal-body">
                <form id="venderForm" method="get" asp-action="VenderProducto" asp-controller="Inventario">
                    <input type="hidden" id="productoId" name="id" />
                    <div class="mb-3">
                        <label for="cantidad" class="form-label">Cantidad</label>
                        <input type="number" class="form-control" id="cantidad" name="cantidad" min="1" required>
                    </div>
                    <div class="mb-3">
                        <label for="clienteId" class="form-label">Cliente (opcional)</label>
                        <select class="form-select" id="clienteId" name="clienteId">
                            <option value="">-- Seleccionar Cliente --</option>
                            @foreach (var cliente in clientes)
                            {
                                <option value="@cliente.Id">@cliente.Nombre @cliente.Apellido</option>
                            }
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                <button type="submit" form="venderForm" class="btn btn-primary">Vender</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.btn-vender').click(function() {
                var productoId = $(this).data('id');
                $('#productoId').val(productoId);
                $('#venderModal').modal('show');
            });
        });
    </script>
}
