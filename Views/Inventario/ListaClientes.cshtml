@model List<ProyectoCatedra.Models.Cliente>

@{
    ViewData["Title"] = "Clientes Registrados";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-controller="Cuenta" asp-action="Inicio">Inicio</a>
        </li>
        <li class="breadcrumb-item active">Clientes</li>
    </ol>
</nav>

<h2>Clientes Registrados</h2>

<div class="mb-3">
    <a asp-controller="Inventario" asp-action="RegistrarCliente" class="btn btn-primary">
        <i class="fa-solid fa-user-plus"></i> Registrar Nuevo Cliente
    </a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover shadow-sm">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Email</th>
                <th>Teléfono</th>
                <th>Dirección</th>
                <th>Fecha de Registro</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cliente in Model)
            {
                <tr>
                    <td>@cliente.Id</td>
                    <td>@cliente.Nombre</td>
                    <td>@cliente.Apellido</td>
                    <td>@cliente.Email</td>
                    <td>@cliente.Telefono</td>
                    <td>@cliente.Direccion</td>
                    <td>@cliente.FechaRegistro.ToString("dd/MM/yyyy")</td>
                    <td>
                        <div class="d-flex gap-2">
                            <a class="btn btn-warning btn-sm"
                               asp-action="EditarCliente"
                               asp-controller="Inventario"
                               asp-route-id="@cliente.Id">
                                <i class="fa-solid fa-pencil"></i> Editar
                            </a>
                            <a class="btn btn-danger btn-sm"
                               asp-action="EliminarCliente"
                               asp-controller="Inventario"
                               asp-route-id="@cliente.Id"
                               onclick="return confirm('¿Estás seguro de eliminar este cliente?');">
                                <i class="fa-solid fa-trash"></i> Eliminar
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<a asp-controller="Inventario" asp-action="Index" class="btn btn-secondary">Volver</a>